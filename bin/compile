#!/bin/bash

CURDIR=$PWD
DIR="$( cd "$( dirname "$0" )" && pwd )"
echo "-----> Installing latest postgrest bin"
cd $DIR; cp ../postgrest-v13.0.0 $1/postgrest-v13.0.0
chmod 755 $1/postgrest-v13.0.0
cd $CURDIR

echo "-----> Setting up postgrest.conf"
cd $DIR; cp ../postgrest.conf $1/postgrest.conf
cd $CURDIR

echo "-----> Deploy postgrest Runner"
cd $DIR; cp ../start_postgrest.sh $1/start_postgrest.sh
chmod 755 $1/start_postgrest.sh
cd $CURDIR 
